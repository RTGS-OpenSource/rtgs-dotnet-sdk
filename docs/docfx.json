{
  "metadata": [
    {
      "src": [
        {
          "src": "..",
          "files": [
            "src/RTGS.DotNetSDK/RTGS.DotNetSDK.Publisher/**.csproj"
          ]
        }
      ],
      "exclude": [
            "**/bin/**",
            "**/obj/**"
          ],
      "dest": "api",
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    }
  ],
  "build": {
    "postProcessors": [ "ExtractSearchIndex" ],
    "globalMetadata": {
			"_appTitle": "RTGS Dotnet SDK documentation",
			"_appFooter": "<span>Copyright Â© RTGS Global</span>"
		},
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false,
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml",
          "guides/**.md",
          "guides/**/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ]
      }
    ],
    "dest": "_site",
    "xrefService": [ "https://xref.docs.microsoft.com/query?uid={uid}" ],
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
		"template": [
			"statictoc",
      "rtgs-template"
		]
  }
}